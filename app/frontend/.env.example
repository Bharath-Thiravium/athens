# ============================================================================
# EHS MANAGEMENT SYSTEM - FRONTEND ENVIRONMENT CONFIGURATION
# ============================================================================
#
# This file contains environment variables for the React frontend.
# Copy this file to .env.local for local development.
# For production, set these variables in your deployment environment.
#

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000

# API proxy target for development (removes CORS issues)
VITE_API_PROXY_TARGET=http://localhost:8000

# Enable secure proxy (set to true for HTTPS)
VITE_API_PROXY_SECURE=false

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# ============================================================================
# DEVELOPMENT SERVER CONFIGURATION
# ============================================================================

# Development server port (CRITICAL: Must be 3000, strictPort enforced)
VITE_PORT=3000

# Development server host
VITE_HOST=localhost

# Enable HTTPS for development server
VITE_HTTPS=false

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application name
VITE_APP_NAME=EHS Management System

# Application version (automatically set from package.json)
VITE_APP_VERSION=1.0.0

# Environment (development, staging, production)
VITE_NODE_ENV=development

# Enable debug mode
VITE_DEBUG=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable AI chatbot features
VITE_ENABLE_AI_CHATBOT=true

# Enable real-time notifications
VITE_ENABLE_NOTIFICATIONS=true

# Enable advanced analytics
VITE_ENABLE_ANALYTICS=true

# Enable experimental features
VITE_ENABLE_EXPERIMENTAL=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Enable Content Security Policy
VITE_ENABLE_CSP=true

# Enable secure cookies (production only)
VITE_SECURE_COOKIES=false

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# ============================================================================
# UI/UX CONFIGURATION
# ============================================================================

# Default theme (light, dark, auto)
VITE_DEFAULT_THEME=light

# Enable theme switching
VITE_ENABLE_THEME_SWITCH=true

# Default language
VITE_DEFAULT_LANGUAGE=en

# Enable multi-language support
VITE_ENABLE_I18N=false

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Enable service worker for caching
VITE_ENABLE_SERVICE_WORKER=false

# Enable lazy loading for routes
VITE_ENABLE_LAZY_LOADING=true

# Bundle analyzer (development only)
VITE_ANALYZE_BUNDLE=false

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================

# Sentry DSN for error tracking (optional)
VITE_SENTRY_DSN=

# Google Analytics ID (optional)
VITE_GA_ID=

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================

# WebSocket URL for real-time features
VITE_WEBSOCKET_URL=ws://localhost:8000/ws/

# Enable WebSocket reconnection
VITE_WEBSOCKET_RECONNECT=true

# WebSocket reconnection attempts
VITE_WEBSOCKET_RECONNECT_ATTEMPTS=5

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================

# Maximum file size for uploads (in bytes)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types (comma-separated)
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# ============================================================================
# PRODUCTION OVERRIDES
# ============================================================================
# Uncomment and modify these for production deployment

# VITE_API_BASE_URL=https://api.your-domain.com
# VITE_API_PROXY_TARGET=https://api.your-domain.com
# VITE_API_PROXY_SECURE=true
# VITE_NODE_ENV=production
# VITE_DEBUG=false
# VITE_SECURE_COOKIES=true
# VITE_ENABLE_SERVICE_WORKER=true
# VITE_WEBSOCKET_URL=wss://api.your-domain.com/ws/

# ============================================================================
# STAGING OVERRIDES
# ============================================================================
# Uncomment and modify these for staging deployment

# VITE_API_BASE_URL=https://staging-api.your-domain.com
# VITE_API_PROXY_TARGET=https://staging-api.your-domain.com
# VITE_NODE_ENV=staging
# VITE_DEBUG=true
# VITE_WEBSOCKET_URL=wss://staging-api.your-domain.com/ws/