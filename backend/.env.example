# ============================================================================
# EHS MANAGEMENT SYSTEM - PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
#
# CRITICAL: This file contains production security settings.
# Generate new values for production deployment.
# Never commit actual production values to version control.
#

# ============================================================================
# SECURITY CONFIGURATION (CRITICAL)
# ============================================================================

# Generate a new 50+ character secret key for production
# Use: python -c "import secrets; print(''.join(secrets.choice('abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&*(-_=+)') for _ in range(50)))"
SECRET_KEY=your-generated-50-character-secret-key-here

# NEVER set to True in production
DEBUG=False

# Production hosts (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com,api.your-domain.com

# ============================================================================
# SSL/HTTPS SECURITY SETTINGS
# ============================================================================

# Force HTTPS redirects (set to True in production)
SECURE_SSL_REDIRECT=True

# HTTP Strict Transport Security (1 year = 31536000 seconds)
SECURE_HSTS_SECONDS=31536000

# Secure cookies (set to True in production)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_NAME=ehs_management_prod
DB_USER=ehs_db_user
DB_PASSWORD=your_ultra_secure_database_password_here
DB_HOST=localhost
DB_PORT=5432

# Database connection pool settings
DB_CONN_MAX_AGE=600
DB_CONN_HEALTH_CHECKS=True

# ============================================================================
# CORS & API CONFIGURATION
# ============================================================================

# Backend API URL
BACKEND_URL=https://api.your-domain.com

# Frontend URL
FRONTEND_URL=https://your-domain.com

# CORS allowed origins (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# CSRF trusted origins (comma-separated, no spaces)
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ============================================================================
# AI SERVICE CONFIGURATION
# ============================================================================

OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Google Translate API key for voice translator
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# AI service rate limiting
AI_RATE_LIMIT_PER_MINUTE=60
AI_RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# FILE UPLOAD SECURITY
# ============================================================================

# Maximum file size (10MB = 10485760 bytes)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated, no spaces)
ALLOWED_FILE_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx,xls,xlsx

# File storage path
MEDIA_ROOT=/var/www/ehs-media

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@your-domain.com
EMAIL_HOST_PASSWORD=your_email_password_here
DEFAULT_FROM_EMAIL=EHS Management System <noreply@your-domain.com>

# Admin email for error notifications
ADMIN_EMAIL=admin@your-domain.com

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching and sessions)
# ============================================================================

REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# ============================================================================
# MONITORING & LOGGING
# ============================================================================

# Sentry DSN for error tracking (optional)
SENTRY_DSN=https://your-sentry-dsn-here

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================

# Database backup settings
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/var/backups/ehs-system

# ============================================================================
# DEVELOPMENT OVERRIDES
# ============================================================================
# Uncomment these for local development only

# DEBUG=True
# SECURE_SSL_REDIRECT=False
# SECURE_HSTS_SECONDS=0
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False
# ALLOWED_HOSTS=localhost,127.0.0.1
# CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
# CSRF_TRUSTED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173